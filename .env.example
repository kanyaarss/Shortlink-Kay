# Shortlink Kay v1 - Environment Variables
# Copy file ini ke .env dan update nilai sesuai environment

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_ENV=production
APP_NAME=Shortlink Kay v1
APP_VERSION=1.0.0
DEBUG_MODE=false

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=shortlink_kay
DB_USER=shortlink_user
DB_PASS=your_secure_password_here

# ============================================
# APPLICATION URL
# ============================================
BASE_URL=https://kanyaars.cloud

# ============================================
# SECURITY SETTINGS
# ============================================
SESSION_TIMEOUT=1800
PASSWORD_HASH_COST=12
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60

# ============================================
# CORS SETTINGS
# ============================================
CORS_ENABLED=true
CORS_ORIGINS=https://kanyaars.cloud

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=error
LOG_DIR=/home/shortlink/storage/logs

# ============================================
# API SETTINGS
# ============================================
API_ENABLED=true
API_RATE_LIMIT=20

# ============================================
# MAIL SETTINGS (Optional)
# ============================================
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=465
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_password
MAIL_FROM=noreply@kanyaars.cloud
